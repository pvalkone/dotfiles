	status_command i3blocks

	colors {
		background	#2b2b2b
		statusline	#d4cfc9
		separator	#666666

		focused_workspace  #5a647e #5a647e #e6e1dc
		active_workspace   #2b2b2b #b6b3eb #e6e1dc
		inactive_workspace #2b2b2b #2b2b2b #e6e1dc
		urgent_workspace   #3a4055 #da4939 #f9f7f3
	}
}

bindsym XF86AudioRaiseVolume exec amixer -q sset Master 5%+ unmute && $restart-i3blocks
bindsym XF86AudioLowerVolume exec amixer -q sset Master 5%- unmute && $restart-i3blocks
bindsym XF86AudioMute exec amixer -q sset Master toggle && $restart-i3blocks
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 && $restart-i3blocks
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 && $restart-i3blocks
bindsym XF86Battery exec $terminal -title powertop -e sudo powertop
bindsym XF86TouchpadToggle exec "synclient TouchpadOff=$(synclient | awk '/TouchpadOff/ {print ($3+1)%2}')"
bindsym XF86ScreenSaver exec xset s activate
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop

