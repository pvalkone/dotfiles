order += "disk /"
order += "wireless wlan0"
order += "ethernet lagg0"
order += "ethernet tun0"
order += "load"
order += "volume master"
order += "battery 0"
order += "tztime local"

disk "/" {
  format = "/ %free"
}

wireless wlan0 {
  format_up = " %essid"
  format_down = " Down"
  color = "#eee8d5"
  color_good = "#eee8d5"
  color_degraded = "#eee8d5"
  color_bad = "#eee8d5"
}

