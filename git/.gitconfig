# vim: ts=2 sw=2 et
[user]
  email = petteri.valkonen@iki.fi
  name = Petteri Valkonen
  signingkey = 0xA6324BAC952E9EED
[core]
  excludesfile = ~/.cvsignore
[alias]
  st = status
  pullr = pull --rebase
  unstage = reset HEAD --
  last = log -1 --stat
  dt = difftool
  uncommit = reset --soft HEAD^
  staged = diff --cached
[push]
  default = simple
[color]
  ui = auto
[rebase]
  autosquash = true
  autostash = true
[diff]
  tool = icdiff
  colorMoved = dimmed-zebra
  algorithm = histogram
[difftool "icdiff"]
  cmd = "icdiff --line-numbers $LOCAL $REMOTE"
[difftool]
  prompt = false
[diff "gpg-diff"]
  textconv = gpg --use-agent -q --batch --decrypt
[commit]
  verbose = true
[sequence]
  editor = interactive-rebase-tool
[includeIf "gitdir:~/work/"]
  path = ~/work/.gitconfig
[pull]
  rebase = true
[rebase]
  autosquash = true
  autostash = true
[push]
  autoSetupRemote = true
[merge]
  conflictstyle = zdiff3
[rerere]
  enabled = true
[init]
  defaultBranch = main
[help]
  autocorrect = prompt
[url "git@github.com:"]
  pushInsteadOf = "https://github.com/"
[absorb]
  maxStack = 20
[safe]
  directory = /opt/snapbak2
